<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/kcm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        android:textSize="17sp"
        android:textColor="#778899"
        android:text="哈哈哈哈"
        />

    <LinearLayout
        android:orientation="vertical"
        android:divider="@drawable/linear_dividers"
        android:dividerPadding="10dp"
        android:showDividers="middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/scores5"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="#292929"
            android:text="学分"
            />

        <TextView
            android:id="@+id/xf"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical|right"
            android:textSize="15sp"
            android:textColor="#FFA500"
            android:text=""
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/scores4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="#292929"
            android:text="成绩"
            />

        <TextView
            android:id="@+id/cj"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical|right"
            android:textSize="15sp"
            android:textColor="#1C86EE"
            android:text=""
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/scores3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="#292929"
            android:text="等级"
            />

        <TextView
            android:id="@+id/dj"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical|right"
            android:textSize="15sp"
            android:textColor="#551A8B"
            android:text=""
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/scores2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="#292929"
            android:text="绩点"
            />

        <TextView
            android:id="@+id/jd"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical|right"
            android:textSize="15sp"
            android:textColor="#EE4000"
            android:text=""
            />

    </LinearLayout>

    </LinearLayout>

</LinearLayout>